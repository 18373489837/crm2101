<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--  登录验证  -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.zhaoliwei.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
<!--修改密码-->
        <servlet-name>ModificationServlet</servlet-name>
        <servlet-class>com.zhaoliwei.controller.ModificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModificationServlet</servlet-name>
        <url-pattern>/modification</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Register1Servlet</servlet-name>
        <servlet-class>com.zhaoliwei.controller.Register1Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register1Servlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
<!--  配置欢迎文件  -->
    <welcome-file-list>
        <welcome-file>reandlo.jsp</welcome-file>
    </welcome-file-list>
</web-app>